
    # Global options
}

# Explicitly handle both http and https to prevent redirect loops behind proxies like Cloudflare
http://{$SITE_ADDRESS:localhost}, https://{$SITE_ADDRESS:localhost} {
    # Default response for the main domain (or other subdomains pointed here)
    respond "The Velez Lab Gateway is active." 200
}

# Subdomain for CV Forge
cv-forge.thevelezlab.com {
    rewrite * /cv-forge{uri}
    reverse_proxy cv-forge-frontend:80
}
